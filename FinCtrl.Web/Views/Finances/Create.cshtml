@model FinCtrl.Domain.Entities.Financas

@{
    ViewBag.Title = "Create";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-center">Nova Despesa/Rendimento</h3>        
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            <form>
                <div class="form-group">
                    @Html.LabelFor(model => model.Tipo)
                    @*@Html.DropDownList("Id", (IEnumerable<SelectListItem>)ViewBag.tipos, String.Empty, new { @class = "form-control"})*@
                    @*@Html.DropDownListFor(model => model.TipoId, new SelectList((IEnumerable<SelectListItem>)ViewBag.tipos), "", new { @class = "form-control" })*@
                    @Html.DropDownListFor(model => model.TipoId, (SelectList)ViewBag.tipos, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Nome)
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Data)
                    @Html.TextBoxFor(model => model.Data, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Valor)
                    @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Observacao)
                    @Html.TextBoxFor(model => model.Observacao, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
        }

    </div>
</div>