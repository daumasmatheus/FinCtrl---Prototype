@model FinCtrl.Domain.Entities.Financas

<div class="card">
    <div class="card-header">
        <h3 class="text-center">Editar Despesa/Rendimento: @Model.Nome</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Tipo)
                    @Html.DropDownListFor(model => model.TipoId, (SelectList)ViewBag.tipos, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Nome)
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Data)
                    @Html.TextBoxFor(model => model.Data, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Valor)
                    @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Observacao)
                    @Html.TextBoxFor(model => model.Observacao, new { @class = "form-control" })
                </div>
                <div class="col-md-4 offset-4">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        }
    </div>
</div>